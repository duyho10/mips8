module ALUcontrol(ALU_Funct,Opcode, funct_in);
output reg [2:0]ALU_Funct;
input [2:0]Opcode;
input [2:0]funct_in;
// Constants
localparam R_TYPE = 3'd0;
localparam ADDI = 3'b001;
localparam BEQ = 3'b010;
localparam J_des= 3'b100;
localparam LB= 3'b011;
localparam SB= 3'b110;
always @(*)
begin
//defaults
ALU_Funct = 3'b000;
if(Opcode == R_TYPE)
begin
ALU_Funct = funct_in;
end
else
begin
case(Opcode)
BEQ:
begin
ALU_Funct = 3'b001 ;
end
J_des:
begin
ALU_Funct = 3'b010 ;
end
LB:
begin
ALU_Funct = 3'b110 ;
end
SB:
begin
ALU_Funct = 3'b111 ;
end
endcase
end
end
endmodule 